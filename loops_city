  console.log(count)
}

// Noah Arc
var animalCount = 0

for (var animalCount = 0; animalCount <= 5; animalCount++) {
  console.log("There are " + animalCount + " many animals in Noahs Arc")
}

// Hip Hop Array
var partyAnimals = ["dog", "cat", "platypus", "spider", "Koala"];
var adjectives = ["barking at the platypus", "meowing at the spider", "dachbakwd at the wall", "trapping the koala", "napping on the dog"]

for (var i in partyAnimals ) {
  console.log("The " + partyAnimals[i] + " is " + adjectives[i])
}

// Merlin's Battle Weapon
var weaponChest = ["Mace", "Sorcerer's Stone", "Excalibur"];
var hero = [
  wizard = "Marlin",
  weapon = weaponChest[0],
  power = 30
];

function fantasy(weapon){
  if (hero[0] == weaponChest[1]){
    console.log(hero[0] + " shall slay the dragon with the " + weaponChest[1])
  }
  else (hero[0] = weaponChest[1]);{
    console.log(hero[0] + " is ready for war with the " + weaponChest[1])
  }
}


fantasy(weaponChest[1])